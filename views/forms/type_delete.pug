extends ../layout

block content
  h1 #{title}: #{type.name}

  if typeItems.length

    p #[strong Delete the following items before attempting to delete this type.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each item in typeItems
        dt
          a(href=item.url) #{item.name} | #{item.stock}

  else
    p Do you really want to delete this type?

    form(method='POST' action='')
      div
        input(type='hidden',name='typeid', required='true', value=type._id )

      button(type='submit') Delete
